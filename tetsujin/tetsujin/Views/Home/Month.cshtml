@{
    Layout = "/Views/Shared/_RtdDoc.cshtml";
    ViewBag.Title = "月別インデックス";
}

@foreach (var entry in ViewBag.entries)
{
    <article class="entry">
        <h2 class="entry-title"><a href="/Article/@entry.EntryID">@entry.Title</a></h2>
        <div class="entry-date">@Html.Raw(entry.PublishDate.ToString("yyyy.MM.dd"))</div>
        <div class="entry-tag">
            <b>
                タグ:
                @foreach (var t in @entry.Tag)
                {
                    <a class="myButton" href="/Filter/Tag/@Uri.EscapeDataString(t)">@t</a>
                }
            </b>
        </div>
    </article>

    <hr />
}

@ViewBag._page

<div id="pageLink">
    @for (var i = 1; i < ViewBag.lastPage + 1; i++)
    {
        @if (i != ViewBag.page + 1)
        {
            @if (i != 1)
            {
                <span class="page"><a href="@ViewBag.pagePath/@i">@i</a></span>
            }
            else
            {
                @if (ViewBag.pagePath == "/Page")
                {
                    <span class="page"><a href="/">1</a></span>
                }
                else
                {
                    <span class="page"><a href="@ViewBag.pagePath">1</a></span>
                }
            }
        }
        else
        {
            <span class="page">@i</span>
        }
    }
</div>